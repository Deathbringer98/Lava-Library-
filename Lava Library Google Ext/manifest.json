{
  "manifest_version": 3,
  "name": "Lava Library",
  "version": "1.0.2",
  "description": "organizes your bookmarks by website and topic. Local-first, privacy-friendly.",
  "action": { "default_popup": "popup.html" },
  "permissions": ["bookmarks", "storage", "alarms"],
  "host_permissions": [],
  "background": { "service_worker": "background.js" },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_ui": { "page": "popup.html", "open_in_tab": false }
}
